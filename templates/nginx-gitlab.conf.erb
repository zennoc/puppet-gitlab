# GITLAB
# Maintainer: @randx
# App Version: 5.0

upstream gitlab {
  server unix:<%= @git_home %>/gitlab/tmp/sockets/gitlab.socket;
}

<% if @gitlab_ssl %>
server {
  listen <%= @gitlab_http_port %>;
  server_name <%= @gitlab_domain %>;
  server_tokens off;
  root /nowhere;
  rewrite ^ https://$server_name$request_uri permanent;
}
<% end %>

server {
  listen <%= @gitlab_ssl ? @gitlab_ssl_port : @gitlab_http_port %>;         # e.g., listen 192.168.1.1:80;
  server_name <%= @gitlab_domain %>;     # e.g., server_name source.example.com;
  server_tokens off;
  root <%= @git_home %>/gitlab/public;

<% if @gitlab_ssl %>
  ssl                           on;
  ssl_certificate               <%= @gitlab_ssl_cert %>;
  ssl_certificate_key           <%= @gitlab_ssl_key %>;
  # please see https://github.com/sbadia/puppet-gitlab/pull/104
  ssl_protocols                 TLSv1.2 TLSv1.1 TLSv1;
  ssl_ciphers                   AES:HIGH:!aNULL:!RC4:!MD5:!ADH:!MDF;
  ssl_prefer_server_ciphers     on;
<% end %>

  # individual nginx logs for this gitlab vhost
  access_log  /var/log/nginx/gitlab_access.log;
  error_log   /var/log/nginx/gitlab_error.log;

  location / {
    # serve static files from defined root folder;.
    # @gitlab is a named location for the upstream fallback, see below
    try_files $uri $uri/index.html $uri.html @gitlab;
  }

  # if a file, which is not found in the root folder is requested,
  # then the proxy pass the request to the upsteam (gitlab unicorn)
  location @gitlab {
    proxy_read_timeout <%= @gitlab_http_timeout %>; # https://github.com/gitlabhq/gitlabhq/issues/694
    proxy_connect_timeout <%= @gitlab_http_timeout %>; # https://github.com/gitlabhq/gitlabhq/issues/694
    proxy_redirect     off;

    proxy_set_header   X-Forwarded-Proto $scheme;
<% if @gitlab_ssl %>
    proxy_set_header   X-Forwarded-Ssl   on;
<% end %>
    proxy_set_header   Host              $http_host;
    proxy_set_header   X-Real-IP         $remote_addr;

    proxy_pass http://gitlab;
  }
}

